<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.mapper.ShoppingcartMapper">
  <resultMap id="BaseResultMap" type="org.pojo.Shoppingcart">
    <id column="cart_id" jdbcType="CHAR" property="cartId" />
    <result column="quantity" jdbcType="INTEGER" property="quantity" />
    <result column="b_id" jdbcType="CHAR" property="bId" />
    <result column="u_id" jdbcType="CHAR" property="uId" />
    <result column="sub_total" jdbcType="DECIMAL" property="subTotal" />
    <result column="order_By" jdbcType="INTEGER" property="orderBy" />
    <association property="book" column="bid" select="org.mapper.BookMapper.findByBid"/> 
    <association property="user" column="u_id" javaType="User">
    	<result column="u_id" property="uid"/>
    </association>
  </resultMap>
  <sql id="Base_Column_List">
    cart_id, quantity, b_id, u_id, order_By
  </sql>
  <select id="selectByPrimaryKey" parameterType="java.lang.String" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from shoppingcart
    where cart_id = #{cartId,jdbcType=CHAR}
  </select>
  
  <update id="updateQuantity" parameterType="map">
    update shoppingcart
    set quantity = #{quantity}
    where cart_id=#{cartid}
  </update>
  
 	<select id="findByCartId" parameterType="String" resultMap = "Shoppingcart">
 	    select *
 	    from shoppingcart
 	    where cart_id = #{cartid}
 	</select>
  
 	<select id="findByUId" parameterType="String" resultMap = "BaseResultMap">
 	    select * 
  		from 
  		shoppingcart c,book b 
  		where 
  		c.b_id=b.bid and c.u_id=#{uid}
  		order by c.order_By
 	</select>
 	
  <!-- 购物车号在进入后台再设计 -->
  <insert id="addCartItem" parameterType="Shoppingcart" >
    	insert into Shoppingcart (cart_id,quantity,bid,uid) values 
		(
		#{cartid},
		#{quantity},
		#{bid},
		#{uid}
		)
  </insert>
  
  <delete id="delete" parameterType="map" >
    	delete from shoppingcart
    	where cart_id=#{cartid}
  </delete>
  
  <select id="findByUidAndBid" parameterType="map" resultMap=""BaseResultMap"">
  	select 
  		* 
  	from 
  		shoppingcart
  	where 
  		u_id=#{uid} and b_id=#{bid}
  </select>
</mapper>